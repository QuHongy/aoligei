
@{
    ViewBag.Title = "Eidt";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var manager = ViewBag.Manager as HXWeb.Models.Manager;
}

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/global.css" rel="stylesheet" />

<h2>编辑管理员信息</h2>
<hr />
@using (Html.BeginForm())
{
    <div class="form-group">
        <label class="control-label col-md-2">姓名</label>
        <div class="col-md-10">
            @Html.TextBox("ManagerName", manager.ManagerName, new { @class = "form-control text-box  single-line", placeholder = "请输入姓名" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">登录名</label>
        <div class="col-md-10">
            @Html.TextBox("ManagerLoginName", manager.ManagerLoginName, new { @class = "form-control text-box  single-line", placeholder = "请输入登录名" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">密码</label>
        <div class="col-md-10">
            @Html.Password("ManagerPwd", manager.ManagerPwd, new { @class = "form-control text-box  single-line", placeholder = "请输入密码" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">电话</label>
        <div class="col-md-10">
            @Html.TextBox("ManagerPhone", manager.ManagerPhone, new { @class = "form-control text-box  single-line", placeholder = "请输入电话" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">邮箱</label>
        <div class="col-md-10">
            @Html.TextBox("ManagerEmail", manager.ManagerEmail, new { @class = "form-control text-box  single-line", placeholder = "请输入邮箱" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value=" 保存 " class="btn btn-primary" />
        </div>
    </div>
}



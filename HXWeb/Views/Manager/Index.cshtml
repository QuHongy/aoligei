
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/global.css" rel="stylesheet" />

<h2>管理员列表</h2>
@Html.ActionLink("添加管理员", "Create", null, new { @class = "btn btn-primary" })

<table class="table">
    <thead>
        <tr>
            <th>姓名</th>
            <th>登录名</th>
            <th>密码</th>
            <th>电话</th>
            <th>Email</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Manager as IList<HXWeb.Models.Manager>)
        {
            <tr>
                <td>@item.ManagerName</td>
                <td>@item.ManagerLoginName</td>
                <td>*****</td>
                <td>@item.ManagerPhone</td>
                <td>@item.ManagerEmail</td>
                <td>
                    @Html.ActionLink("编辑", "Eidt", new { ManagerID = item.ManagerID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("详情", "Detial", new { ManagerID = item.ManagerID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("删除", "Delete","Manager", new { ManagerID = item.ManagerID }, new { @class = "btn btn-danger" })
                    @*      <a href="/teacher/Delete?TeacherID=@item.TeacherID" data-target="#exampleModal" class="btn btn-danger">删除</a>*@
                </td>
            </tr>
        }

    </tbody>
</table>

<!-- Button trigger modal -->
@*<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
        删除
    </button>*@

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">是否删除</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">确定</button>
            </div>
        </div>
    </div>
</div>
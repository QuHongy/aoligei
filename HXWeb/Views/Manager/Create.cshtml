
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/global.css" rel="stylesheet" />
<h2>添加管理员</h2>
<hr />
@using (Html.BeginForm())
{
    <div class="form-group">
        <label class="control-label col-md-2" for="StuName">姓名</label>
        <div class="col-md-10">
            @Html.TextBox("ManagerName", null, new { @class = "form-control text-box  single-line", placeholder = "请输入姓名" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="StuLoginName">登录名</label>
        <div class="col-md-10">
            @Html.TextBox("ManagerLoginName", null, new { @class = "form-control text-box  single-line", placeholder = "请输入登录名" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="StuLoginPwd">密码</label>
        <div class="col-md-10">
            @Html.Password("ManagerPwd", null, new { @class = "form-control text-box  single-line", placeholder = "请输入密码" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="StuPhone">电话</label>
        <div class="col-md-10">
            @Html.TextBox("ManagerPhone", null, new { @class = "form-control text-box  single-line", placeholder = "请输入电话" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="StuEmail">Email</label>
        <div class="col-md-10">
            @Html.TextBox("ManagerEmail", null, new { @class = "form-control text-box  single-line", placeholder = "请输入Email" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value=" 保存 " class="btn btn-primary" />
        </div>
    </div>
}

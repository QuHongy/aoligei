
@{
    ViewBag.Title = "Eidt";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var User = ViewBag.User as HXWeb.Models.Users;
    var address = ViewBag.Address as List<HXWeb.Models.Address>;
}

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/global.css" rel="stylesheet" />

<h2>编辑信息</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label class="control-label col-md-2" for="UserName">姓名:</label>
        <div class="col-md-10">
            <input type="text" name="UserName" value="@User.UserName" class="form-control text-box  single-line" placeholder="请输入姓名" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="UserSex">性别:</label>
        <div class="col-md-10">
            <select name="UserSex">
                @if (User.UserSex==0)
                {
                    <option value="1">男</option>
                    <option value="0" selected>女</option>
                }
                
                else
                {
                    <option value="1">男</option>
                    <option value="0">女</option>
                }

            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="UserPhone">电话:</label>
        <div class="col-md-10">
            <input type="text" name="UserPhone" value="@User.UserPhone" class="form-control text-box  single-line" placeholder = "请输入电话" required/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="AddressID">地区:</label>
        <div class="col-md-10">
            <select name="AddressID">
                @foreach (var item in address)
                {
                    <option value="@item.ID">@item.Address1</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="StuGrade">详细地址:</label>
        <div class="col-md-10">
            <input type="text" name="UserAddress" value="@User.UserAddress" class="form-control text-box  single-line" placeholder="请输入详细地址" required />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value=" 保存 " class="btn btn-primary" />
        </div>
    </div>
}
